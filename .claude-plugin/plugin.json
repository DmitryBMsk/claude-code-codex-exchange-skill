{
  "name": "claude-code-codex-exchange-skill",
  "version": "1.0.0",
  "description": "A skill for Claude Code and OpenAI Codex CLI to manage Microsoft Exchange/Outlook emails",
  "author": "DmitryBMsk",
  "repository": "https://github.com/DmitryBMsk/claude-code-codex-exchange-skill",
  "license": "MIT",
  "keywords": [
    "exchange",
    "outlook",
    "email",
    "mail",
    "microsoft",
    "ews"
  ],
  "skills": [
    {
      "name": "exchange-mail",
      "path": "skills/exchange-mail/SKILL.md",
      "description": "Full email management for Microsoft Exchange/Outlook"
    }
  ],
  "dependencies": {
    "python": ">=3.10",
    "exchangelib": ">=5.0.0"
  },
  "environment": {
    "required": [
      "EXCHANGE_SERVER",
      "EXCHANGE_EMAIL",
      "EXCHANGE_USERNAME",
      "EXCHANGE_PASSWORD"
    ],
    "optional": [
      "EXCHANGE_DOMAIN"
    ]
  }
